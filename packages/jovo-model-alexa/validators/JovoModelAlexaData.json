{
  "type": "object",
  "properties": {
    "alexa": {
      "$ref": "#/definitions/AlexaModel"
    }
  },
  "definitions": {
    "AlexaModel": {
      "type": "object",
      "properties": {
        "interactionModel": {
          "type": "object",
          "properties": {
            "languageModel": {
              "type": "object",
              "properties": {
                "invocationName": {
                  "type": "string"
                },
                "intents": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/AlexaLMIntent"
                  }
                },
                "types": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/AlexaLMTypeObject"
                  }
                }
              }
            }
          },
          "required": ["languageModel"]
        }
      },
      "required": ["interactionModel"]
    },
    "AlexaLMIntent": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "slots": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AlexaLMInputObject"
          }
        },
        "samples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["name"]
    },
    "AlexaLMInputObject": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "anyOf": [
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "alexaInputObjtype": {
          "type": "string"
        }
      },
      "required": ["name", "type"]
    },
    "AlexaLMTypeObject": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AlexaLMTypeValue"
          }
        }
      },
      "required": ["name", "values"]
    },
    "AlexaLMTypeValue": {
      "type": "object",
      "properties": {
        "id": {
          "type": ["null", "string"]
        },
        "name": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string"
            },
            "synonyms": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["value"]
        }
      },
      "required": ["id", "name"]
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
